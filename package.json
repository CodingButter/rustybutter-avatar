{
  "name": "rustybutter-avatar",
  "version": "1.0.5",
  "description": "Avatar expression controller for OBS with MCP integration for LLMs",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev:server": "npm run dev -w @rustybutter-avatar/server",
    "dev:mcp": "npm run dev -w @rustybutter-avatar/mcp-server",
    "start:server": "npm run start -w @rustybutter-avatar/server",
    "start:mcp": "npm run start -w @rustybutter-avatar/mcp-server",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "keywords": [
    "avatar",
    "obs",
    "mcp",
    "llm",
    "streamer",
    "streaming",
    "expression",
    "model-context-protocol"
  ],
  "author": "CodingButter",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodingButter/rustybutter-avatar.git"
  },
  "devDependencies": {
    "@rusty-butter/tsconfig": "workspace:^"
  }
}
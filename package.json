{
  "name": "rustybutter-avatar",
  "version": "1.0.0",
  "description": "Avatar expression controller for OBS",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts > rustybutter.log 2>&1 & echo $! > .pid",
    "dev:stop": "if [ -f .pid ]; then kill $(cat .pid) && rm .pid && echo 'Dev server stopped'; else echo 'No dev server running'; fi",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:mcp": "node test-mcp.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.17",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}

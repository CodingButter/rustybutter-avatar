{
  "name": "rustybutter-avatar",
  "version": "1.0.2",
  "description": "Avatar expression controller for OBS with MCP integration for LLMs",
  "main": "dist/index.js",
  "bin": {
    "rustybutter-avatar": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "dist/",
    "public/"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts > rustybutter.log 2>&1 & echo $! > .pid",
    "dev:stop": "if [ -f .pid ]; then kill $(cat .pid) && rm .pid && echo 'Dev server stopped'; else echo 'No dev server running'; fi",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:mcp": "node test-mcp.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "avatar",
    "obs",
    "mcp",
    "llm",
    "streamer",
    "streaming",
    "claude",
    "expression",
    "model-context-protocol"
  ],
  "author": "CodingButter",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodingButter/rustybutter-avatar.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.1",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "inquirer": "^8.2.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^8.2.5",
    "@types/node": "^22.15.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
